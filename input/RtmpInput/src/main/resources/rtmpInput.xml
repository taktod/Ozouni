<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  <!-- writer設定 -->
  <bean id="writer" class="com.ttProject.ozouni.rtmpInput.ReceiveWriter"/>
  <!-- rtmpClient設定 -->
  <bean id="rtmpClient" class="com.ttProject.ozouni.rtmpInput.RtmpClient">
    <property name="objectEncoding" value="3"/>
    <property name="writerToSave" ref="writer"/>
  </bean>
  <bean class="com.ttProject.ozouni.rtmpInput.RtmpClient">
    <property name="objectEncoding" value="3"/>
    <property name="writerToSave" ref="writer"/>
  </bean>
  <!-- signalWorker設定(一定時間ごとにプロセスの状態をレポートします。) -->
  <bean class="com.ttProject.ozouni.base.SignalWorker">
<!--     <property name="signalExecutor"/> -->
    <property name="interval" value="1000"/>
<!--     <property name="serverNameAnalyzer"/> -->
    <property name="reportHandler"><bean class="com.ttProject.ozouni.reportHandler.EhcacheReportHandler"/></property>
  </bean>
</beans>
